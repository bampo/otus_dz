{
  "Jwt": {
    "Key": "your-256-bit-secret-key-here-1234567890",
    "Issuer": "api-gateway",
    "Audience": "api-gateway",
    "ExpiryInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "paymentsRoute": {
        "ClusterId": "paymentsCluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },
      "ordersRoute": {
        "ClusterId": "ordersCluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },
      "deliveryRoute": {
        "ClusterId": "deliveryCluster",
        "Match": {
          "Path": "/api/delivery/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },
      "stocksRoute": {
        "ClusterId": "stocksCluster",
        "Match": {
          "Path": "/api/stocks/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },
      "cartRoute": {
        "ClusterId": "cartCluster",
        "Match": {
          "Path": "/api/carts/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },
      "catalogRoute": {
        "ClusterId": "catalogCluster",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      },

      "customersRouteAuth": {
        "ClusterId": "customersCluster",
        "Match": {
          "Path": "/api/customers/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "Anonymous"
      },
      "customersRoute": {
        "ClusterId": "customersCluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      }
    },
    "Clusters": {
      "paymentsCluster": {
        "Destinations": {
          "paymentsService": {
            "Address": "http://payments-service/"
          }
        }
      },
      "ordersCluster": {
        "Destinations": {
          "ordersService": {
            "Address": "http://orders-service/"
          }
        }
      },
      "deliveryCluster": {
        "Destinations": {
          "deliveryService": {
            "Address": "http://delivery-service/"
          }
        }
      },
      "stocksCluster": {
        "Destinations": {
          "stocksService": {
            "Address": "http://stocks-service/"
          }
        }
      },
      "cartCluster": {
        "Destinations": {
          "cartService": {
            "Address": "http://cart-service/"
          }
        }
      },
      "catalogCluster": {
        "Destinations": {
          "catalogService": {
            "Address": "http://catalog-service/"
          }
        }
      },
      "customersCluster": {
        "Destinations": {
          "customersService": {
            "Address": "http://customer-service/"
          }
        }
      }
    }
  }
}
